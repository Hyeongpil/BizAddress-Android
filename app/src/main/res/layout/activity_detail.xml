<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_centerInParent="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_vertical_margin">

        <LinearLayout
            android:id="@+id/detail_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <ImageView
                android:id="@+id/detail_img"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_marginStart="10dp">

                <TextView
                    android:id="@+id/detail_company"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="회사명"
                    android:textSize="17dp"
                    android:textColor="@color/black"/>

                <LinearLayout
                    android:layout_below="@id/detail_company"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp">
                    <TextView
                        android:id="@+id/detail_division"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="부서"
                        android:textSize="15dp"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/detail_position"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="직급"
                        android:textSize="15dp"
                        android:textColor="@color/black"
                        android:layout_marginStart="5dp"/>
                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/detail_top"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey">
        </LinearLayout>

        <LinearLayout
            android:id="@+id/detail_profile"
            android:layout_below="@+id/detail_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/detail_name"/>

                <TextView
                    android:id="@+id/detail_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/detail_profile_marginStart"
                    android:text="이름"
                    android:textSize="15dp"
                    android:layout_gravity="center"
                    android:textColor="@color/black" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/detail_profile_marginTop">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/detail_phone"/>

                <TextView
                    android:id="@+id/detail_phonenum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="핸드폰 번호"
                    android:textSize="15dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/detail_profile_marginStart"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/detail_profile_marginTop">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/detail_mail"/>

                <TextView
                    android:id="@+id/detail_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="이메일"
                    android:textSize="15dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/detail_profile_marginStart"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/detail_address_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/detail_profile_marginTop">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/detail_address"/>

                <TextView
                    android:id="@+id/detail_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="주소"
                    android:textSize="15dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/detail_profile_marginStart"
                    android:textColor="@color/black" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_below="@id/detail_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="@dimen/detail_icon_marginTop">

            <ImageView
                android:id="@+id/detail_address_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_address"
                android:layout_marginEnd="@dimen/detail_icon_marginEnd"/>

            <ImageView
                android:id="@+id/detail_sms_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_sms"
                android:layout_marginEnd="@dimen/detail_icon_marginEnd"/>

            <ImageView
                android:id="@+id/detail_email_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_email"
                android:layout_marginEnd="@dimen/detail_icon_marginEnd"/>

            <ImageView
                android:id="@+id/detail_call_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_call"/>


        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>